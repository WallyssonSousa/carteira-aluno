    <EditText
        android:id="@+id/edtDisciplina"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="14dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_ios_style"
        android:hint="Qual é a disciplina das notas ?"
        android:inputType="text"
        android:padding="14dp"
        android:textColorHint="#1A237E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edtNota1"/>

    <EditText
        android:id="@+id/edtNota2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="14dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_ios_style"
        android:hint="Nota 2"
        android:inputType="numberDecimal"
        android:padding="14dp"
        android:textColorHint="#1A237E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtNota1" />

    <EditText
        android:id="@+id/edtNota1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="14dp"
        android:background="@drawable/edittext_ios_style"
        android:hint="Nota 1"
        android:inputType="numberDecimal"
        android:padding="14dp"
        android:textColorHint="#1A237E"
        android:layout_marginTop="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@+id/imgV_secondView"/>

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="165dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#2196F3"
        android:text="Salvar"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtNota4" />

    <Button
        android:id="@+id/btnListarDisc"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#2196F3"
        android:text="Ver Disciplinas"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSalvar" />


    <EditText
        android:id="@+id/edtNota3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="14dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_ios_style"
        android:hint="Nota 3"
        android:inputType="numberDecimal"
        android:padding="14dp"
        android:textColorHint="#1A237E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtNota2" />

    <EditText
        android:id="@+id/edtNota4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="14dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/edittext_ios_style"
        android:hint="Nota 4"
        android:inputType="numberDecimal"
        android:textColorHint="#1A237E"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/edtNota3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="93dp"
        android:layout_height="54dp"
        android:backgroundTint="#2196F3"
        android:text="Voltar"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>
