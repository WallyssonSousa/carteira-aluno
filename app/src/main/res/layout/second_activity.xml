<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#04001A"
    tools:context=".SecondActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/img_tela_media"
        app:layout_constraintBottom_toBottomOf="@+id/edtNota1"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="176dp"
        android:layout_height="40dp"
        android:text="MÃ©dia Final: "
        android:textColor="#fff"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="140dp" />

    <TextView
        android:id="@+id/txtAprovadoReprovado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aprovado ou Reprovado: "
        android:textColor="#fff"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="208dp" />

    <EditText
        android:id="@+id/edtNota2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="14dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_ios_style"
        android:hint="Nota 2"
        android:inputType="numberDecimal"
        android:padding="14dp"
        android:textColorHint="#1A237E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtNota1" />

    <EditText
        android:id="@+id/edtNota1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="14dp"
        android:background="@drawable/edittext_ios_style"
        android:hint="Nota 1"
        android:inputType="numberDecimal"
        android:padding="14dp"
        android:textColorHint="#1A237E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="284dp" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="165dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#2196F3"
        android:text="Calcular"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtNota4" />

    <EditText
        android:id="@+id/edtNota3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="14dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_ios_style"
        android:hint="Nota 3"
        android:inputType="numberDecimal"
        android:padding="14dp"
        android:textColorHint="#1A237E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtNota2" />

    <EditText
        android:id="@+id/edtNota4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="14dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/edittext_ios_style"
        android:hint="Nota 4"
        android:inputType="numberDecimal"
        android:textColorHint="#1A237E"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/edtNota3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="93dp"
        android:layout_height="54dp"
        android:backgroundTint="#2196F3"
        android:text="Voltar"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>
